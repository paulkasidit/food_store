<h1>Mario's Food Supply</h1>

<h3>List of Products</h3>
<% if @product.any? %>
  <ul>
    <% @product.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no products yet.</p>
<% end %>


<%= button_to "Create new product", 
              new_product_path,
              method: :get %>